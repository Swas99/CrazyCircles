<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="@drawable/border_white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_blue_1"/>

    <LinearLayout
        android:id="@+id/region_you_win"
        android:layout_margin="20dp"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_white_border">
        <TextView
            android:id="@+id/tvP2Result"
            android:rotation="180"
            android:text="You\nWin!"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="45sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|bottom"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@drawable/background_white_circle"/>
        <TextView
            android:id="@+id/tvP1Result"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="You\nLose!"
            android:textSize="45sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|top"/>
    </LinearLayout>


    <LinearLayout
        android:layout_above="@+id/region_you_win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/border_white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <Button
                android:rotation="180"
                android:id="@+id/btn_home_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_home"
                style="?android:attr/buttonBarButtonStyle"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <Button
                android:rotation="180"
                android:id="@+id/btn_replay_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_replay"
                style="?android:attr/buttonBarButtonStyle"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/region_you_win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/border_white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_home_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_home"
                style="?android:attr/buttonBarButtonStyle"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_replay_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_replay"
                style="?android:attr/buttonBarButtonStyle"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>